<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="defaultBtnStyle" TargetType="{x:Type Button}">
        <Setter Property="Background"
                Value="#C4C4C4"/>
        <Setter Property="BorderThickness"
                Value="0"/>
        <Setter Property="FontSize"
                Value="22"/>
    </Style>

    <Style x:Key="defaultListItemStyle" TargetType="{x:Type ListViewItem}">
        <Setter Property="FontSize"
                Value="22"/>
        <Setter Property="Margin"
                Value="42 7">
        </Setter>
    </Style>

    <Style x:Key="defaultBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness"
                Value="1">
        </Setter>
        <Setter Property="BorderBrush"
                Value="Black">
        </Setter>
        <Setter Property="MinWidth"
                Value="143">
        </Setter>
    </Style>

    <Style TargetType="{x:Type StackPanel}">
        <Setter Property="Margin"
                Value="0 5 0 5">
        </Setter>
    </Style>

    <Style x:Key="defaultListImageSize" TargetType="{x:Type Image}">
        <Setter Property="MaxWidth"
                Value="66">
        </Setter>
        <Setter Property="MinHeight"
                Value="49">
        </Setter>
    </Style>
</ResourceDictionary>